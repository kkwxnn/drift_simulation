<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="f1tenth">

  <xacro:include filename="gazebo.xacro"/>
  <xacro:include filename="inertial_macros.xacro"/>

  <!-- Chassis Link -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.32 0.16 0.12"/>
      </geometry>

    </visual>
    <collision>
      <geometry>
        <box size="0.32 0.16 0.12"/>
      </geometry>
    </collision>

    <xacro:inertial_box mass="1.98" x="0.32" y="0.16" z="0.12"> 
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- Front Wheel -->
  <link name="front_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.031" length="0.025"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.031" length="0.025"/>
      </geometry>
    </collision>

    <xacro:inertial_cylinder mass="0.02" length="0.025" radius="0.031"> 
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Front Wheel Joint -->
  <joint name="front_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="front_wheel"/>
    <origin xyz="0.16 0.0 -0.06" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> 
    <limit effort="100" velocity="2.5"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.031" length="0.025"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.031" length="0.025"/>
      </geometry>
    </collision>

    <xacro:inertial_cylinder mass="0.02" length="0.025" radius="0.031"> 
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

   <!-- Rear Left Wheel Joint -->
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.16 0.08 -0.06" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> 
    <limit effort="100" velocity="2.5"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.031" length="0.025"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.031" length="0.025"/>
      </geometry>
    </collision>

    <xacro:inertial_cylinder mass="0.02" length="0.025" radius="0.031"> 
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Rear Right Wheel Joint -->
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.16 -0.08 -0.06" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> 
    <limit effort="100" velocity="3.0"/>
  </joint>

</robot>
